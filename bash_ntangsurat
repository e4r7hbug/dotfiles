# vi: set filetype=sh shiftwidth=2 tabstop=2 expandtab autoindent :

# Brew's bins
if [ -d "/usr/local/sbin" ]; then
  export PATH="/usr/local/sbin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# Golang
GOROOT_DIR="$HOME/.local/go"
if [ -d "$GOROOT_DIR" ]; then
  export GOROOT="$GOROOT_DIR"
fi
PATH="$HOME/go/bin:$HOME/.local/go/bin:$PATH"

# NPM packages
NPM_BIN="$HOME/node_modules/.bin/"
if [[ -d "$NPM_BIN" ]]; then
  export PATH="$NPM_BIN:$PATH"
fi

# Mac Python pip bins
PIP_BIN=$HOME/Library/Python/2.7/bin
if [ -d "$PIP_BIN" ]; then
  export PATH="$PIP_BIN:$PATH"
fi

# Detect Mac Homebrew package
if command -v brew > /dev/null 2>&1; then
  brew() {
    unset -f brew

    completions2=$(brew --prefix)/share/bash-completion/bash_completion
    if [ -f "$completions2" ]; then
      . "$completions2" &>/dev/null
    fi
  }

  AUTOJUMP="$(brew --prefix)/etc/profile.d/autojump.sh"
  [[ -s "${AUTOJUMP}" ]] && . "${AUTOJUMP}"

else
  autojump_sh=/usr/share/autojump/autojump.sh
  if [ -f $autojump_sh ]; then
    . $autojump_sh
  fi
fi

LOCAL_BIN="$HOME/.local/bin"
if [ -d "$LOCAL_BIN" ]; then
  export PATH="$LOCAL_BIN:$PATH"
fi

# added by Pew
if command -v pew > /dev/null 2>&1; then
  source "$(pew shell_config)"
fi

# GitHub Projects
GITDIR=~/git

# https://github.com/nojhan/liquidprompt
liquid=$GITDIR/github.liquidprompt/liquidprompt
if [ -f $liquid ]; then
  . $liquid
fi

# https://github.com/github/hub
if command -v hub > /dev/null 2>&1; then
  hub() {
    unset -f hub

    hub="$(go env GOPATH)/src/github.com/github/hub/etc/hub.bash_completion.sh"
    if [ -f $hub ]; then
      . $hub
    fi
  }
fi

# iTerm2
#test -e "${HOME}/.iterm2_shell_integration.bash" && source "${HOME}/.iterm2_shell_integration.bash"

MAC_BASH_COMPLETION='/usr/local/share/bash-completion/bash_completion'
if [ -f "$MAC_BASH_COMPLETION" ]; then
  source "$MAC_BASH_COMPLETION"
fi

# Enable pip bash completion
if command -v pip > /dev/null 2>&1; then
  pip() {
    unset -f pip

    eval "$(pip completion --bash)"
  }
fi

type -P vex &>/dev/null && eval "$(vex --shell-config bash)"
